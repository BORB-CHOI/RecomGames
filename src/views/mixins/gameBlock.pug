mixin gameBlock(game = {})
    .game-block          
        .block__img
            a(href=routes.gameDetail(game.id))
                img(src=game.mainImg)
        .block__text
            span.block__title #{game.title}
            span.block__platform #{game.platform}
            //- ','후에 띄어쓰기가 되어 있어야 문자들이 영역이탈하지 않기에 공백 넣어줌.
            - let genres = ""                        
            each item in game.genres
                if item == game.genres[0]
                    - genres+=item
                else 
                    - genres+=`, ${item}`
            span.block__genres=genres
